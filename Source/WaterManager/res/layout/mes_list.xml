<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mlis_item"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" 
    android:background="#ffffff">
    
    <ImageView 
        android:id="@+id/iswater"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            
            <TextView
        		android:id="@+id/mesIterm_mes"
        		android:layout_height="match_parent"
        		android:layout_width="0dp"
        		android:layout_weight="3"
        		android:layout_marginLeft="5dp"
        		android:textSize="20sp"
        		android:textColor="#959494"
        		android:gravity="left|center"/>
            
            <TextView 
                android:id="@+id/mesIterm_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="#b4b3b3"
                android:gravity="right|center"/>
        
        </LinearLayout>
        
        <TextView 
            android:id="@+id/mesIterm_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="5dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:gravity="center|left"
            android:textSize="12sp"
            android:textColor="#b4b3b3"/>
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/ibt_del"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:src="@drawable/btn_delect_normal"
        android:background="@android:color/transparent"
        android:layout_marginRight="-65dp" 
        android:contentDescription="@string/nu"/>
</LinearLayout>
